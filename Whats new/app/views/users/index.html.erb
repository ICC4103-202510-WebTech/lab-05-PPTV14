<h1 class="mb-4">Usuarios</h1>

<table class="table table-striped table-hover shadow-sm">
  <thead class="table-primary">
    <tr>
      <th>Email</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td>
          <%= link_to "Ver", user_path(user), class: "btn btn-sm btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
