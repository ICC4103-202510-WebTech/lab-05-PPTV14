<h1 class="mb-4">Usuarios</h1>

<% if can?(:create, User) %>
  <%= link_to "Add new user", new_user_path, class: "btn btn-primary mb-3" %>
<% end %>

<table class="table table-striped table-hover shadow-sm">
  <thead class="table-primary">
    <tr>
      <th>Email</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Mensajes enviados</th> 
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.messages.count %></td> 
        <td>
          <%= link_to "Ver", user_path(user), class: "btn btn-sm btn-primary me-1" %>
          <% if can? :edit, user %>
            <%= link_to "Editar usuario", edit_user_path(user), class: "btn btn-sm btn-secondary" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
