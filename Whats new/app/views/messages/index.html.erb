<h1 class="mb-4">Mensajes</h1>

<%= link_to "Add new message", new_message_path, class: "btn btn-warning mb-3" %>

<table class="table table-striped table-hover shadow-sm">
  <thead class="table-success">
    <tr>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Contenido</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |msg| %>
      <tr>
        <td><%= msg.chat_id %></td>
        <td><%= msg.user_id %></td>
        <td><%= msg.body %></td>
        <td>
          <%= link_to "Ver", message_path(msg), class: "btn btn-sm btn-primary" %>
          <%= link_to "Editar_mensaje", message_path(msg), class: "btn btn-sm btn-secondary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

