<h1>Messages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |msg| %>
      <tr>
        <td><%= msg.chat_id %></td>
        <td><%= msg.user_id %></td>
        <td><%= msg.body %></td>
        <td><%= link_to "Show", message_path(msg) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
