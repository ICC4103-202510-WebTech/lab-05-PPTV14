<h1 class="mb-4">Mensajes</h1>

<table class="table table-striped table-hover shadow-sm">
  <thead class="table-success">
    <tr>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Contenido</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |msg| %>
      <tr>
        <td><%= msg.chat_id %></td>
        <td><%= msg.user_id %></td>
        <td><%= msg.body %></td>
        <td>
          <%= link_to "Ver", message_path(msg), class: "btn btn-sm btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
