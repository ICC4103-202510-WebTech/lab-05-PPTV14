<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header bg-info text-white">
      <h3>Edit Message</h3>
    </div>

    <div class="card-body">
      <%= form_with model: @message, local: true do |f| %>
        <% if @message.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @message.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :body, class: "form-label" %>
          <%= f.text_area :body, class: "form-control", rows: 3, value: @message.body %>
        </div>

        <div class="mb-3">
          <%= f.label :user_id, class: "form-label" %>
          <%= f.number_field :user_id, class: "form-control", value: @message.user_id %>
        </div>

        <div class="mb-3">
          <%= f.label :chat_id, class: "form-label" %>
          <%= f.number_field :chat_id, class: "form-control", value: @message.chat_id %>
        </div>

        <%= f.submit "Update Message", class: "btn btn-info" %>
        <%= link_to "Cancel", message_path(@message), class: "btn btn-outline-secondary ms-2" %>
      <% end %>
    </div>
  </div>
</div>
