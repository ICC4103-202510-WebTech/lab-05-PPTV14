<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header bg-success text-white">
      <h3>Edit Chat</h3>
    </div>

    <div class="card-body">
      <%= form_with model: @chat, local: true do |f| %>
        <% if @chat.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @chat.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :sender_id, class: "form-label" %>
          <%= f.number_field :sender_id, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :receiver_id, class: "form-label" %>
          <%= f.number_field :receiver_id, class: "form-control" %>
        </div>

        <%= f.submit "Update Chat", class: "btn btn-success" %>
        <%= link_to "Cancel", chat_path(@chat), class: "btn btn-outline-secondary ms-2" %>
      <% end %>
    </div>
  </div>
</div>
